{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["esnext.array", "es2018", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": true
  },
  "include": [
    "./server/**/*",
    "./client/**/*",
    "./lib/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
