{
  "name": "curatify",
  "version": "1.0.0",
  "description": "My fabulous Nuxt.js project",
  "author": "Vadim",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development concurrently 'nodemon -r dotenv/config --harmony server/index.js -w server -w lib' 'npx parcel watch client/index.html client/login.html'",
    "build": "nuxt build",
    "start": "NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "migrate:new": "node -r dotenv/config migrate.js create ",
    "migrate:drop": "node -r dotenv/config migrate.js drop",
    "migrate": "node -r dotenv/config migrate.js migrate ",
    "migrate:prod": "node migrate.js migrate ",
    "deploy": "sh ./deploy.sh"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.7.2",
    "axios": "^0.18.0",
    "axios-retry": "^3.1.1",
    "body-parser": "^1.18.3",
    "bulma": "^0.7.4",
    "bulmaswatch": "^0.7.2",
    "camelcase-keys": "^5.0.0",
    "cookie-session": "^2.0.0-beta.3",
    "easy-peasy": "^1.14.1",
    "esm": "^3.0.84",
    "express": "^4.16.3",
    "express-async-errors": "^3.1.1",
    "pg": "^7.8.0",
    "pg-template-tag": "^0.1.2",
    "postgrator": "^3.7.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-router-dom": "^4.3.1",
    "snakecase-keys": "^2.1.0",
    "sugar": "^2.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^1.11.0",
    "parcel-bundler": "^1.11.0",
    "sass": "^1.17.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": "xo-react",
    "plugins": [
      "react"
    ],
    "semicolon": false,
    "space": true,
    "parser": "babel-eslint",
    "envs": [
      "node",
      "browser",
      "es6"
    ],
    "rules": {
      "no-use-extend-native/no-use-extend-native": 0,
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "react/button-has-type": 0,
      "no-negated-condition": 0,
      "react/prop-types": 0,
      "unicorn/filename-case": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-unassigned-import": 0
    }
  }
}
